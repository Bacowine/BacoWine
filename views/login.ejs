<!DOCTYPE html>
<html lang="es-ES">

<head>
  <%- include('./partials/_head',{title}); %>
  <style>
    body {
      background: radial-gradient(circle, rgba(119,23,49,1) 0%, rgba(0,0,0,1) 100%);
    }

    .login-form, .toggle-passwd{
      background: transparent;
      border: none;
      height: 50px;
      color: #fff;
      border: 1px solid transparent;
      background: rgba(255,255,255,.08);
      border-radius: 40px;
      padding-left: 20px;
      padding-right: 20px;
      transition: .3s;
    }

    .login-form:hover, .login-form:focus, .toggle-passwd:hover {
      color: #fff;
      background: transparent;
      outline: none;
      box-shadow: none;
      border-color: rgba(255,255,255,.4);
    }

    .toggle-passwd:hover {
      cursor: pointer;
    }

    .login-form::placeholder{
      color: white;
    }

    .login-submit {
      background: #fbceb5;
      border: 1px solid #fbceb5;
      color: #000;
      border-radius: 40px;
      box-shadow: none;
      font-size: 15px;
      text-transform: uppercase;
    }
    .login-submit:hover {
      border: 1px solid #fbceb5;
      background: #fbceb5 ;
      color: #000;
    }

    #rem-check {
      transform: scale(1.3);      
      box-shadow: 0px 0px 0px 1px transparent ;
    }

  </style>
</head>

<body>
  <div class="container h-100">
    <div class="row pb-5 h-100 px-5 align-items-center justify-content-center">
      <div class="col-md-6 col-lg-4">
          <h3 class="mb-4 text-center text-white">Iniciar Sesión</h3>
          <form action="/login" method="POST" class="row g-3">
            <div class="col-12">
              <input type="text" class="form-control login-form" placeholder="Usuario" name="user" required />
            </div>
            <div class="col-12 input-group">
              <input id="password" type="password" class="form-control login-form" placeholder="Contraseña" name="password" required />              
              <i class="input-group-text bi bi-eye-slash text-white toggle-passwd"></i>    
            </div>
            <div class="ps-5 col-12 form-check form-switch">
              <input class="form-check-input" type="checkbox" id="rem-check" name="remember" checked>
              <label class="form-check-label text-white pt-1 ps-1" for="rem-check">Recordarme</label>
            </div>
            <div class="col-12">
              <button type="submit" class="form-control btn btn-primary px-3 login-submit">
                Iniciar sesión
              </button>
            </div>
          </form>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded",()=>{
      const toggle = document.querySelector(".toggle-passwd");
      const password = document.querySelector('#password');
      toggle.addEventListener("click",(e) => {   
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        e.target.classList.toggle('bi-eye');
      })
    })
  </script>
</body>

</html>